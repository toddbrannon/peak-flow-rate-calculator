    <div class="row">
      <!-- Left Column -->
      <div class="col-md-6">
        <div class="d-flex flex-column h-100">
          <!-- First Card -->
          
          <div class="card mb-3 bg-light flex-grow-1">
            <div class="card-body">
              <!-- Card content -->
              <h2 class="card-title text-center mb-4">Select applicable standard</h2>

                <div class="btn-group d-flex justify-content-center mx-4">
                  <input type="radio" class="btn-check" name="standard" id="bs6700" autocomplete="off" checked />
                  <label class="btn btn-secondary" for="bs6700">BS 6700</label>

                  <input type="radio" class="btn-check" name="standard" id="bs806" autocomplete="off" />
                  <label class="btn btn-secondary" for="bs806">BS 806</label>

                  <input type="radio" class="btn-check" name="standard" id="din1988" autocomplete="off" />
                  <label class="btn btn-secondary" for="din1988">DIN 1988-3</label>
                </div>
              
            </div>
          </div>
  
          <!-- Second Card -->
          <div class="card mb-3 bg-light flex-grow-1">
            <div class="card-body">
              <!-- Card content -->
              <h2 class="card-title text-center mb-4">Usage</h2>
                <div class="btn-group d-flex justify-content-center mx-4">
                  <input type="radio" class="btn-check" name="usage" id="low" autocomplete="off" checked />
                  <label class="btn btn-secondary" for="low">Low</label>
                
                  <input type="radio" class="btn-check" name="usage" id="medium" autocomplete="off" />
                  <label class="btn btn-secondary" for="medium">Medium</label>
                
                  <input type="radio" class="btn-check" name="usage" id="high" autocomplete="off" />
                  <label class="btn btn-secondary" for="high">High</label>
                </div>
            </div>
          </div>
  
          <!-- Third Card -->
          <div class="card bg-light flex-grow-1">
            <div class="card-body">
              <!-- Card content -->
              <h2 class="card-title text-center mb-4">DIN-1988-3 Options</h2>
                <div class="mb-3">
                  <label for="building-type" class="form-label">Select Building Type</label>
                  <select id="building-type" class="form-select">
                    <option value="Administration Building">Administration Building</option>
                    <option value="Hospital">Hospital</option>
                    <option value="Hotel">Hotel</option>
                    <option value="Leisure centre">Leisure centre</option>
                    <option value="Nursing home">Nursing home</option>
                    <option value="Old peoples residence">Old peoples residence</option>
                    <option value="Residential building">Residential building</option>
                    <option value="School">School</option>
                  </select>
                </div>
            </div>
          </div>
        </div>
      </div>
  
      <!-- Right Column -->
      <div class="col-md-6">
        <div class="card bg-light h-100">
          <div class="card-body">
            <!-- Card content -->
            <h2 class="card-title text-center mb-4">Appliances</h2>

            <!-- header/heading row -->
            <div class="row">
              <div class="col-md-4 mb-0 d-flex align-items-center">
                <label class="form-label header-label">Description</label>
              </div>
              <div class="col-md-4 mb-0 d-flex align-items-center justify-content-center">
                <label class="form-label header-label">Quantity</label>
              </div> 
              <div class="col-md-4 mb-0 text-center align-items-center">
                <label class="form-label header-label">LUs</label>
              </div>
            </div>
            <!-- End header/heading row -->

            <!-- Add divider line -->
            <hr class="mt-0">

            <div class="row">
                <div class="col-md-4 mb-3 d-flex align-items-center">
