  <div class="container m-auto">

    <!-- Row for 'Calculate' button and Output -->
    <div class="row mb-4">
      <div class="col-md-6">
        <div class="d-flex flex-column h-100 justify-content-end">
          <div class="mt-0 text-end">
            <button type="button" class="btn btn-primary btn-md" id="calculate-btn">Calculate</button>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="d-flex flex-column h-100 justify-content-start">
          <div class="mt-0 text-start">
            <div class="output-box w-25"></div>
          </div>
        </div>
      </div>
    </div>
    
    

