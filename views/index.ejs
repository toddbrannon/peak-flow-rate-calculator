<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <title>Peak Flow Rate Calculator</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/custom.css">
  <!-- <style>
    .row {
      display: flex;
    }

    .card {
      flex: 1;
    }
  </style> -->
</head>

<body class="vh-100">

    <h1 class="text-center my-5">Peak Flow Rate Calculator</h1>
    <hr>

  

  <div class="container m-auto">

    <!-- Row for 'Calculate' button and Output -->
    <div class="row mb-4">
      <div class="col-lg-6">
        <div class="d-flex flex-column h-100 justify-content-end">
          <div class="mt-0 text-end container-calculation">
            <button type="button" class="btn btn-primary btn-md align-self-end custom-btn" id="calculate-btn">Calculate</button>
          </div>
        </div>
      </div>
      <div class="col-md-6 output-column">
        <div class="d-flex flex-column h-100 justify-content-start">
          <div class="mt-0 text-start container-calculation">
            <div class="output-box w-25 text-center border border-secondary border-1 d-flex align-items-center justify-content-center">
              <!-- Content here -->
            </div>
          </div>
        </div>
      </div>
      
    </div>
    
    
    
    

    <!-- END row for 'Calculate' button and Output -->

    <div class="row">
      <!-- Left Column -->
      <div class="col-lg-6">
        <div class="d-flex flex-column h-100">
          <!-- First Card -->
          
          <div class="card mb-3 bg-light flex-grow-1">
            <div class="card-body">
              <!-- Card content -->
              <h4 class="card-title text-center mb-5 mt-2">Select applicable standard</h4>

                <div class="btn-group d-flex justify-content-center mx-4">
                  <input type="radio" class="btn-check btn-radio" name="standard" id="bs6700" autocomplete="off" checked />
                  <label class="btn btn-secondary btn-radio" for="bs6700">BS 6700</label>

                  <input type="radio" class="btn-check btn-radio" name="standard" id="bs806" autocomplete="off" />
                  <label class="btn btn-secondary btn-radio" for="bs806">BS 806</label>

                  <input type="radio" class="btn-check btn-radio" name="standard" id="din1988" autocomplete="off" />
                  <label class="btn btn-secondary btn-radio" for="din1988">DIN 1988-3</label>
                </div>
              
            </div>
          </div>
  
          <!-- Second Card -->
          <div class="card mb-3 bg-light flex-grow-1">
            <div class="card-body">
              <!-- Card content -->
              <h4 class="card-title text-center mb-5 mt-2">Usage</h4>
                <div class="btn-group d-flex justify-content-center mx-4">
                  <input type="radio" class="btn-check" name="usage" id="low" autocomplete="off" checked />
                  <label class="btn btn-secondary btn-radio" for="low">Low</label>
                
                  <input type="radio" class="btn-check" name="usage" id="medium" autocomplete="off" />
                  <label class="btn btn-secondary btn-radio" for="medium">Medium</label>
                
                  <input type="radio" class="btn-check" name="usage" id="high" autocomplete="off" />
                  <label class="btn btn-secondary btn-radio" for="high">High</label>
                </div>
            </div>
          </div>
  
          <!-- Third Card -->
          <div class="card bg-light flex-grow-1">
            <div class="card-body">
              <!-- Card content -->
              <h4 class="card-title text-center mb-4 mt-2">DIN-1988-3 Options</h4>
                <div class="mb-3">
                  <label for="building-type" class="form-label">Select Building Type</label>
                  <select id="building-type" class="form-select">
                    <option value="Administration Building">Administration Building</option>
                    <option value="Hospital">Hospital</option>
                    <option value="Hotel">Hotel</option>
                    <option value="Leisure centre">Leisure centre</option>
                    <option value="Nursing home">Nursing home</option>
                    <option value="Old peoples residence">Old peoples residence</option>
                    <option value="Residential building">Residential building</option>
                    <option value="School">School</option>
                  </select>
                </div>
            </div>
          </div>
        </div>
      </div>
  
      <!-- Right Column -->
      <div class="col-lg-6">
        <div class="card bg-light h-100 card-appliances">
          <div class="card-body">
            <!-- Card content -->
            <h4 class="card-title text-center mb-4 mt-2">Appliances</h4>

            <!-- header/heading row -->
            <div class="row">
              <div class="col-4 mb-0 d-flex align-items-center">
                <label class="form-label header-label">Description</label>
              </div>
              <div class="col-4 mb-0 d-flex align-items-center justify-content-center">
                <label class="form-label header-label">Quantity</label>
              </div> 
              <div class="col-4 mb-0 text-center align-items-center">
                <label class="form-label header-label">LUs</label>
              </div>
            </div>
            <!-- End header/heading row -->

            <!-- Add divider line -->
            <hr class="mt-0">

            <div class="row mb-2">
                <div class="col-4 mt-2 d-flex align-items-center">
                  <label for="whb-lu" class="form-label">Wash hand basins</label>
                </div>
                <div class="col-4 d-flex align-items-center">
                    <input type="number" class="form-control w-50 mx-auto" id="wash-hand-basins" min="0" max="999">
                </div> 
                <div class="col-4 mt-2 text-center align-items-center">
                    <label for="whb-lu" class="form-label" id="whb-lu"></label>
                  </div>
            </div>
            <div class="row mb-2">
                <div class="col-4 mt-2 d-flex align-items-center">
                  <label for="sinks" class="form-label">Sinks</label>
                </div>
                <div class="col-4 d-flex align-items-center">
                    <input type="number" class="form-control w-50 mx-auto" id="sinks" min="0" max="999">
                </div> 
                <div class="col-4 mt-2 text-center align-items-center">
                    <label for="sinks-lu" class="form-label" id="sinks-lu"></label>
                  </div>
            </div>
            <div class="row mb-2">
                <div class="col-4 mt-2 d-flex align-items-center">
                  <label for="nds" class="form-label">Non-domestic sink</label>
                </div>
                <div class="col-4 d-flex align-items-center">
                    <input type="number" class="form-control w-50 mx-auto" id="non-domestic-sink" min="0" max="999">
                </div> 
                <div class="col-4 mt-2 text-center align-items-center">
                    <label for="nds-lu" class="form-label" id="nds-lu"></label>
                  </div>
            </div>
            <div class="row mb-2">
                <div class="col-4 mt-2 d-flex align-items-center">
                  <label for="showers" class="form-label">Showers</label>
                </div>
                <div class="col-4 d-flex align-items-center">
                    <input type="number" class="form-control w-50 mx-auto" id="showers" min="0" max="999">
                </div> 
                <div class="col-4 mt-2 text-center align-items-center">
                    <label for="showers-lu" class="form-label" id="showers-lu"></label>
                  </div>
            </div>
            <div class="row mb-2">
                <div class="col-4 mt-2 d-flex align-items-center">
                  <label for="baths" class="form-label">Baths</label>
                </div>
                <div class="col-4 d-flex align-items-center">
                    <input type="number" class="form-control w-50 mx-auto" id="baths" min="0" max="999">
                </div> 
                <div class="col-4 mt-2 text-center align-items-center">
                    <label for="baths-lu" class="form-label" id="baths-lu"></label>
                  </div>
            </div>
            <div class="row mb-2">
                <div class="col-4 mt-2 d-flex align-items-center">
                  <label for="bidets" class="form-label">Bidets</label>
                </div>
                <div class="col-4 d-flex align-items-center">
                    <input type="number" class="form-control w-50 mx-auto" id="bidets" min="0" max="999">
                </div> 
                <div class="col-4 mt-2 text-center align-items-center">
                    <label for="bidets-lu" class="form-label" id="bidets-lu"></label>
                  </div>
            </div>
            <div class="row mb-2">
                <div class="col-4 mt-2 d-flex align-items-center">
                  <label for="wm" class="form-label">Washing Machine</label>
                </div>
                <div class="col-4 d-flex align-items-center">
                    <input type="number" class="form-control w-50 mx-auto" id="washing-machine" min="0" max="999">
                </div> 
                <div class="col-4 mt-2 text-center align-items-center">
                    <label for="wm-lu" class="form-label" id="wm-lu"></label>
                  </div>
            </div>
            <div class="row mb-2">
                <div class="col-4 mt-2 d-flex align-items-center">
                  <label for="dw" class="form-label">Dish washers</label>
                </div>
                <div class="col-4 d-flex align-items-center">
                  <input type="number" class="form-control w-50 mx-auto" id="dish-washers" min="0" max="999">
                </div> 
                <div class="col-4 mt-2 text-center align-items-center">
                  <label for="dw-lu" class="form-label" id="dw-lu"></label>
                </div>
            </div>
            <div class="row">
              <div class="col-4 mb-2 d-flex align-items-center">
                <label for="total-loading units" class="form-label fw-bold">Total Loading Units</label>
              </div>
              <div class="col-4 mb-2 d-flex align-items-center">
                
              </div> 
              <div class="col-4 mb-2 text-center align-items-center">
                <label for="total-loading-units" class="form-label fw-bold total-loading-units" id="total-loading-units"></label>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-12">
        <div class="row justify-content-center">
          <div class="col-md-4 mb-3 mt-5 d-flex text-center">
            <span class="">&copy; <span id="copyright">
              year
            </span class="copyright"> <a href="https://www.trusponse.com" target="_blank" class="">Todd Brannon for TruSponse Solutions</a>. All Rights Reserved.</span>
          </div>
        </div>
      </div>


<!-- Dynamic copyright date -->
<script>
  const Copyright = new Date().getFullYear() + " ";
  document.getElementById('copyright').textContent = Copyright;
</script>

</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="js/script.js"></script>
</body>

</html>